import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import linregress

# Step 1: Import the data
def load_data():
    df = pd.read_csv('epa-sea-level.csv')
    return df

# Step 2: Create the scatter plot
def draw_scatter_plot(df):
    plt.scatter(df['Year'], df['CSIRO Adjusted Sea Level'], color='blue', label='Data Points')

# Step 3: Create the first line of best fit (using all the data)
def draw_first_line_of_best_fit(df):
    # Perform linear regression on the full dataset
    slope, intercept, r_value, p_value, std_err = linregress(df['Year'], df['CSIRO Adjusted Sea Level'])
    
    # Create a range of years for the line of best fit (from 1880 to 2050)
    years_extended = range(1880, 2051)
    sea_level_extended = [slope * year + intercept for year in years_extended]
    
    # Plot the first line of best fit
    plt.plot(years_extended, sea_level_extended, color='red', label='Best Fit Line (All Data)')

# Step 4: Create the second line of best fit (using data from 2000 onward)
def draw_second_line_of_best_fit(df):
    # Filter data to include only from the year 2000 onward
    df_recent = df[df['Year'] >= 2000]
    
    # Perform linear regression on the filtered data
    slope, intercept, r_value, p_value, std_err = linregress(df_recent['Year'], df_recent['CSIRO Adjusted Sea Level'])
    
    # Create a range of years for the second line of best fit (from 2000 to 2050)
    years_recent_extended = range(2000, 2051)
    sea_level_recent_extended = [slope * year + intercept for year in years_recent_extended]
    
    # Plot the second line of best fit
    plt.plot(years_recent_extended, sea_level_recent_extended, color='green', label='Best Fit Line (2000 Onward)')

# Step 5: Customize the plot
def customize_plot():
    plt.title('Rise in Sea Level')
    plt.xlabel('Year')
    plt.ylabel('Sea Level (inches)')
    plt.legend()

    # Save the figure
    plt.savefig('sea_level_rise.png')
    plt.close()

# Step 6: Main function to call all the steps
def sea_level_predictor():
    df = load_data()
    draw_scatter_plot(df)
    draw_first_line_of_best_fit(df)
    draw_second_line_of_best_fit(df)
    customize_plot()

# Uncomment to test locally
